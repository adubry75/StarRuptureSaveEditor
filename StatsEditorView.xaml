<UserControl x:Class="StarRuptureSaveEditor.Views.StatsEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:StarRuptureSaveEditor.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:StatsEditorViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="12">
            <TextBlock Text="Player Stats" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="{Binding PlayerId, StringFormat=Player: {0}}"
                       Foreground="Gray"
                       FontSize="12"
                       Margin="0,2,0,0"
                       Visibility="{Binding PlayerId, Converter={StaticResource NullToCollapsedConverter}}"/>
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="Gray"
                       FontSize="11"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="12" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Skill Progression" Margin="0,0,0,12">
                    <ItemsControl ItemsSource="{Binding Skills}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="160"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding SkillName}"
                                               VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left">
                                        <TextBlock Text="Level:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0"/>
                                        <TextBox Text="{Binding Level, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="80"
                                                 Padding="4,2"
                                                 VerticalContentAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left">
                                        <TextBlock Text="XP:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0"/>
                                        <TextBox Text="{Binding Experience, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="120"
                                                 Padding="4,2"
                                                 VerticalContentAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>

                <GroupBox Header="Survival Values">
                    <ItemsControl ItemsSource="{Binding SurvivalStats}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="140"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding StatName}"
                                               VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left">
                                        <TextBlock Text="Current:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0"/>
                                        <TextBox Text="{Binding Current, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="90"
                                                 Padding="4,2"
                                                 VerticalContentAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left">
                                        <TextBlock Text="Min:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0"/>
                                        <TextBox Text="{Binding Min, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="90"
                                                 Padding="4,2"
                                                 VerticalContentAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left">
                                        <TextBlock Text="Max:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0"/>
                                        <TextBox Text="{Binding Max, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="90"
                                                 Padding="4,2"
                                                 VerticalContentAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
