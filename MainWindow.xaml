<Window x:Class="StarRuptureSaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarRuptureSaveEditor"
        xmlns:views="clr-namespace:StarRuptureSaveEditor.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}">

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenFileCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveFileCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl+Shift" Command="{Binding SaveFileAsCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." 
                          Command="{Binding OpenFileCommand}"
                          InputGestureText="Ctrl+O"/>
                <Separator/>
                <MenuItem Header="_Save" 
                          Command="{Binding SaveFileCommand}"
                          InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As..." 
                          Command="{Binding SaveFileAsCommand}"
                          InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="_Export as JSON..." 
                          Command="{Binding ExportJsonCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" 
                          Command="{Binding ExitCommand}"
                          InputGestureText="Alt+F4"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" ToolBarTray.IsLocked="True">
            <Button Command="{Binding OpenFileCommand}" 
                    ToolTip="Open Save File (Ctrl+O)"
                    Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“‚" FontSize="14"/>
                    <TextBlock Text=" Open" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding SaveFileCommand}" 
                    ToolTip="Save (Ctrl+S)"
                    Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¾" FontSize="14"/>
                    <TextBlock Text=" Save" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Separator/>

            <TextBlock Text="{Binding CurrentFileName}" 
                       VerticalAlignment="Center"
                       Margin="8,0"
                       FontWeight="SemiBold"/>

            <TextBlock VerticalAlignment="Center" 
                       Foreground="OrangeRed"
                       Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}">
                <Run Text=" (unsaved changes)"/>
            </TextBlock>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <!-- Welcome Screen (no file loaded) -->
            <Border Background="#F5F5F5">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFileLoaded}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="40">
                    <TextBlock Text="Star Rupture Save Editor"
                               FontSize="28"
                               FontWeight="Light"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Open a .sav file to begin editing"
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,24"/>

                    <Button Command="{Binding OpenFileCommand}"
                            HorizontalAlignment="Center"
                            Padding="24,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‚" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock Text=" Open Save File" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Margin="0,24,0,0"
                               HorizontalAlignment="Center"
                               Foreground="Gray"
                               FontSize="11">
                        <Run Text="Save files are typically located at:"/>
                        <LineBreak/>
                        <Run Text="C:\Program Files (x86)\Steam\userdata\[your steam id]\1631270\remote\Saved\SaveGames\[your save file name]\"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Tab Control (file loaded) -->
            <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                        Visibility="{Binding IsFileLoaded, Converter={StaticResource BoolToVisibilityConverter}}">

                <!-- Crafting Recipes Tab -->
                <TabItem Header="ðŸ”§ Crafting Recipes">
                    <Grid DataContext="{Binding CraftingEditor}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350" MinWidth="200"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*" MinWidth="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Recipe List -->
                        <DockPanel Grid.Column="0">
                            <StackPanel DockPanel.Dock="Top" Margin="8">
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="6,4"
                                         VerticalContentAlignment="Center">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="ðŸ” Search recipes..." 
                                                                               Foreground="Gray" 
                                                                               Margin="6,0,0,0"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Button Content="Unlock All" 
                                            Command="{Binding UnlockAllCommand}"
                                            Padding="12,4" Margin="0,0,8,0"/>
                                    <Button Content="Unlock None" 
                                            Command="{Binding UnlockNoneCommand}"
                                            Padding="12,4"/>
                                </StackPanel>

                                <TextBlock Margin="0,8,0,0" Foreground="Gray">
                                    <Run Text="{Binding FilteredRecipes.Count, Mode=OneWay}"/>
                                    <Run Text=" recipes shown, "/>
                                    <Run Text="{Binding MarkedForUnlockCount, Mode=OneWay}"/>
                                    <Run Text=" marked for unlock"/>
                                </TextBlock>
                            </StackPanel>

                            <ListBox ItemsSource="{Binding FilteredRecipes}"
                                     SelectedItem="{Binding SelectedRecipe}"
                                     Margin="8,0,8,8"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type local:LockedRecipeViewModel}">
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <CheckBox Grid.RowSpan="2"
                                                      IsChecked="{Binding IsMarkedForUnlock}"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,8,0"
                                                      ToolTip="Mark for unlock"/>

                                            <TextBlock Grid.Column="1" Grid.Row="0"
                                                       Text="{Binding FriendlyName}"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMarkedForUnlock}" Value="True">
                                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                <Setter Property="Foreground" Value="Gray"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <TextBlock Grid.Column="1" Grid.Row="1"
                                                       Text="{Binding ItemsSummary}"
                                                       Foreground="Gray"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>

                        <!-- Splitter -->
                        <GridSplitter Grid.Column="1" 
                                      Width="5" 
                                      HorizontalAlignment="Stretch"
                                      Background="LightGray"/>

                        <!-- Right Panel: Recipe Details -->
                        <Border Grid.Column="2" 
                                BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Margin="8"
                                CornerRadius="4">
                            <Grid>
                                <!-- No Selection Message -->
                                <TextBlock Text="Select a recipe from the list to edit its requirements"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="Gray"
                                           FontStyle="Italic">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedRecipe}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Recipe Editor -->
                                <DockPanel Visibility="{Binding SelectedRecipe, Converter={StaticResource NullToCollapsedConverter}}"
                                           Margin="12">

                                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                                        <TextBlock Text="{Binding SelectedRecipe.FriendlyName}"
                                                   FontSize="18"
                                                   FontWeight="Bold"/>

                                        <TextBlock Text="{Binding SelectedRecipe.RecipePath}"
                                                   Foreground="Gray"
                                                   FontSize="10"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                            <CheckBox Content="Mark for Unlock"
                                                      IsChecked="{Binding SelectedRecipe.IsMarkedForUnlock}"
                                                      FontWeight="SemiBold"/>

                                            <TextBlock Text="(Recipe will be removed from locked list on save)"
                                                       Foreground="Gray"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding SelectedRecipe.IsMarkedForUnlock, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel DockPanel.Dock="Bottom" 
                                                Orientation="Horizontal" 
                                                Margin="0,12,0,0">
                                        <Button Content="Zero All Counts"
                                                Command="{Binding ZeroAllCountsCommand}"
                                                Padding="12,6"/>
                                    </StackPanel>

                                    <GroupBox Header="Required Items">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding SelectedRecipe.Items}"
                                                          Margin="8">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate DataType="{x:Type local:RecipeItemViewModel}">
                                                        <Grid Margin="0,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="100"/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding FriendlyName}"
                                                                           FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding ItemId}"
                                                                           Foreground="Gray"
                                                                           FontSize="10"/>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="1" 
                                                                        Orientation="Horizontal"
                                                                        HorizontalAlignment="Right">
                                                                <TextBlock Text="Count:"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,0,8,0"/>
                                                                <TextBox Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}"
                                                                         Width="60"
                                                                         TextAlignment="Right"
                                                                         Padding="4,2"
                                                                         VerticalContentAlignment="Center"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </GroupBox>
                                </DockPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Raw JSON Tab -->
                <TabItem Header="ðŸ“„ Raw JSON">
                    <DockPanel DataContext="{Binding RawJsonViewer}">
                        <Border DockPanel.Dock="Bottom" 
                                Background="#F0F0F0" 
                                Padding="8,4">
                            <TextBlock Text="{Binding StatusMessage}" 
                                       Foreground="Gray"/>
                        </Border>

                        <Border DockPanel.Dock="Top" 
                                Background="#FFF8DC" 
                                Padding="8"
                                BorderBrush="#DDD"
                                BorderThickness="0,0,0,1">
                            <TextBlock TextWrapping="Wrap">
                                <Run FontWeight="Bold">Raw JSON View</Run>
                                <Run> - This is a read-only view of the complete save file data.</Run>
                            </TextBlock>
                        </Border>

                        <TextBox Text="{Binding JsonText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 TextWrapping="NoWrap"
                                 AcceptsReturn="True"
                                 Margin="8"/>
                    </DockPanel>
                </TabItem>

                <!-- Inventory Tab -->
                <TabItem Header="ðŸ“¦ Inventory">
                    <Grid DataContext="{Binding InventoryEditor}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400" MinWidth="250"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*" MinWidth="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Item List -->
                        <DockPanel Grid.Column="0">
                            <StackPanel DockPanel.Dock="Top" Margin="8">
                                <!-- Search -->
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="6,4"
                                         VerticalContentAlignment="Center">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="ðŸ” Search items..." 
                                                                               Foreground="Gray" 
                                                                               Margin="6,0,0,0"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <!-- Category Filter -->
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="Category:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox ItemsSource="{Binding Categories}"
                                              SelectedItem="{Binding SelectedCategory}"
                                              MinWidth="150"/>
                                </StackPanel>

                                <!-- Stats -->
                                <TextBlock Margin="0,8,0,0" Foreground="Gray">
                                    <Run Text="{Binding FilteredItems.Count, Mode=OneWay}"/>
                                    <Run Text=" items shown, Total quantity: "/>
                                    <Run Text="{Binding TotalQuantity, Mode=OneWay}"/>
                                </TextBlock>

                                <!-- Bulk Actions -->
                                <Expander Header="Bulk Actions" Margin="0,8,0,0">
                                    <StackPanel Margin="4">
                                        <TextBlock Text="Apply to filtered items:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Ã—2" Command="{Binding MultiplyAllAmountsCommand}" 
                                                    CommandParameter="2" Padding="8,4" Margin="0,0,4,0"
                                                    ToolTip="Double all amounts"/>
                                            <Button Content="Ã—10" Command="{Binding MultiplyAllAmountsCommand}" 
                                                    CommandParameter="10" Padding="8,4" Margin="0,0,4,0"
                                                    ToolTip="10x all amounts"/>
                                            <Button Content="Set 999" Command="{Binding SetAllAmountsCommand}" 
                                                    CommandParameter="999" Padding="8,4" Margin="0,0,4,0"
                                                    ToolTip="Set all to 999"/>
                                            <Button Content="Set 9999" Command="{Binding SetAllAmountsCommand}" 
                                                    CommandParameter="9999" Padding="8,4"
                                                    ToolTip="Set all to 9999"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>

                            <!-- Item List -->
                            <ListBox ItemsSource="{Binding FilteredItems}"
                                     SelectedItem="{Binding SelectedItem}"
                                     Margin="8,0,8,8"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type local:InventoryItemViewModel}">
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Grid.Row="0"
                                                       Text="{Binding FriendlyName}"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Grid.Column="1" Grid.Row="0"
                                                       Text="{Binding Amount}"
                                                       FontWeight="Bold"
                                                       Foreground="DarkGreen"
                                                       Margin="8,0,0,0"/>

                                            <TextBlock Grid.Column="0" Grid.Row="1"
                                                       Text="{Binding Category}"
                                                       Foreground="Gray"
                                                       FontSize="11"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>

                        <!-- Splitter -->
                        <GridSplitter Grid.Column="1" 
                                      Width="5" 
                                      HorizontalAlignment="Stretch"
                                      Background="LightGray"/>

                        <!-- Right Panel: Item Details -->
                        <Border Grid.Column="2" 
                                BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Margin="8"
                                CornerRadius="4">
                            <Grid>
                                <!-- No Selection Message -->
                                <TextBlock Text="Select an item from the list to edit its amount"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="Gray"
                                           FontStyle="Italic">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedItem}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Item Editor -->
                                <DockPanel Visibility="{Binding SelectedItem, Converter={StaticResource NullToCollapsedConverter}}"
                                           Margin="12">

                                    <StackPanel DockPanel.Dock="Top">
                                        <TextBlock Text="{Binding SelectedItem.FriendlyName}"
                                                   FontSize="24"
                                                   FontWeight="Bold"/>

                                        <TextBlock Text="{Binding SelectedItem.Category}"
                                                   Foreground="Gray"
                                                   FontSize="14"
                                                   Margin="0,4,0,0"/>

                                        <TextBlock Text="{Binding SelectedItem.ItemData}"
                                                   Foreground="Gray"
                                                   FontSize="10"
                                                   TextWrapping="Wrap"
                                                   Margin="0,8,0,0"/>

                                        <Separator Margin="0,16,0,16"/>

                                        <!-- Amount Editor -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Amount:" 
                                                       FontSize="16"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"/>
                                            <TextBox Text="{Binding SelectedItem.Amount, UpdateSourceTrigger=PropertyChanged}"
                                                     Width="100"
                                                     FontSize="18"
                                                     TextAlignment="Right"
                                                     Padding="8,4"
                                                     VerticalContentAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Quick Set Buttons -->
                                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                            <TextBlock Text="Quick set:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <Button Content="1" Click="SetAmount_Click" Tag="1" Padding="12,4" Margin="0,0,4,0"/>
                                            <Button Content="10" Click="SetAmount_Click" Tag="10" Padding="12,4" Margin="0,0,4,0"/>
                                            <Button Content="100" Click="SetAmount_Click" Tag="100" Padding="12,4" Margin="0,0,4,0"/>
                                            <Button Content="999" Click="SetAmount_Click" Tag="999" Padding="12,4" Margin="0,0,4,0"/>
                                            <Button Content="9999" Click="SetAmount_Click" Tag="9999" Padding="12,4"/>
                                        </StackPanel>

                                        <Separator Margin="0,16,0,16"/>

                                        <!-- Item Info -->
                                        <TextBlock Text="Item Details" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Item ID:" Foreground="Gray"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedItem.ItemId}" 
                                                       TextWrapping="Wrap"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Handle:" Foreground="Gray" Margin="0,4,0,0"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedItem.Handle}" 
                                                       FontSize="10" Foreground="Gray" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </DockPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="Player Stats">
                    <views:StatsEditorView DataContext="{Binding StatsEditor}"/>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
